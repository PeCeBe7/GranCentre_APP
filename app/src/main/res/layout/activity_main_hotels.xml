<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        tools:context=".MainHotels">

        <TextView
            android:id="@+id/titol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titol_hotel"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:entries="@array/spinner_array" />

        <androidx.cardview.widget.CardView
            android:id="@+id/primer_h"
            style="@style/cardViewStyle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/primer_Hotel"
                    style="@style/titleStyle"
                    android:layout_marginEnd="70dp"
                    android:text="@string/titol1_hotel"/>

                <ImageView
                    android:id="@+id/img_fonda"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/fonda" />

                <TextView
                    android:id="@+id/hdesc1"
                    style="@style/descriptionStyle"
                    android:layout_below="@id/primer_Hotel"
                    android:text="@string/hdesc1" />

                <RatingBar
                    android:id="@+id/hrat1"
                    style="@style/ratingStyle"
                    android:layout_below="@+id/hdesc1"/>

                <Button
                    android:id="@+id/trucar1"
                    style="@style/buttonStyle"
                    android:layout_below="@id/hrat1"
                    android:layout_toStartOf="@id/web1"
                    android:text="@string/telf" />

                <Button
                    android:id="@+id/web1"
                    style="@style/buttonStyle"
                    android:layout_below="@id/hrat1"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:text="@string/web" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/segon_h"
            style="@style/cardViewStyle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/segon_Hotel"
                    style="@style/titleStyle"
                    android:layout_marginEnd="50dp"
                    android:text="@string/titol2_hotel"/>

                <ImageView
                    android:id="@+id/img_granollers"
                    android:layout_width="140dp"
                    android:layout_height="180dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/granollers" />

                <TextView
                    android:id="@+id/hdesc2"
                    style="@style/descriptionStyle"
                    android:layout_below="@id/segon_Hotel"
                    android:layout_marginStart="10dp"
                    android:text="@string/hdesc2" />

                <RatingBar
                    android:id="@+id/hrat2"
                    style="@style/ratingStyle"
                    android:layout_below="@+id/hdesc2" />

                <Button
                    android:id="@+id/trucar2"
                    style="@style/buttonStyle"
                    android:layout_below="@id/hrat2"
                    android:layout_toStartOf="@id/web2"
                    android:text="@string/telf" />

                <Button
                    android:id="@+id/web2"
                    style="@style/buttonStyle"
                    android:layout_below="@id/hrat2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:text="@string/web" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tercer_h"
            style="@style/cardViewStyle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tercer_Hotel"
                    style="@style/titleStyle"
                    android:layout_marginEnd="70dp"
                    android:text="@string/titol3_hotel" />

                <ImageView
                    android:id="@+id/img_iris"
                    android:layout_width="140dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="20dp"
                   android:layout_alignParentLeft="true"
                    android:src="@drawable/iris" />
                <TextView
                    android:id="@+id/hdesc3"
                    style="@style/descriptionStyle"
                    android:layout_below="@id/tercer_Hotel"
                    android:layout_marginStart="10dp"
                    android:text="@string/hdesc3" />

                <RatingBar
                    android:id="@+id/hrat3"
                    style="@style/ratingStyle"
                    android:layout_below="@+id/hdesc3" />

                <Button
                    android:id="@+id/trucar3"
                    style="@style/buttonStyle"
                    android:layout_below="@id/hrat3"
                    android:layout_toStartOf="@id/web3"
                    android:text="@string/telf" />

                <Button
                    android:id="@+id/web3"
                    style="@style/buttonStyle"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/hrat3"
                    android:text="@string/web" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/quart_h"
            style="@style/cardViewStyle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/quart_Hotel"
                    style="@style/titleStyle"
                    android:layout_marginEnd="70dp"
                    android:text="@string/titol4_hotel" />

                <ImageView
                    android:id="@+id/img_bib"
                    android:layout_width="140dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/bib" />
                <TextView
                    android:id="@+id/hdesc4"
                    style="@style/descriptionStyle"
                    android:layout_below="@id/quart_Hotel"
                    android:layout_marginStart="10dp"
                    android:text="@string/hdesc4" />
                <RatingBar
                    android:id="@+id/hrat4"
                    style="@style/ratingStyle"
                    android:layout_below="@+id/hdesc4" />

                <Button
                    android:id="@+id/trucar4"
                    style="@style/buttonStyle"
                    android:layout_below="@id/hrat4"
                    android:layout_toStartOf="@id/web4"
                    android:text="@string/telf" />

                <Button
                    android:id="@+id/web4"
                    style="@style/buttonStyle"
                    android:layout_below="@id/hrat4"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:text="@string/web" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cinque_h"
            style="@style/cardViewStyle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/cinque_Hotel"
                    style="@style/titleStyle"
                    android:layout_marginEnd="40dp"
                    android:text="@string/titol5_hotel" />

                <ImageView
                    android:id="@+id/img_atenea"
                    android:layout_width="140dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/atenea" />
                <TextView
                    android:id="@+id/hdesc5"
                    style="@style/descriptionStyle"
                    android:layout_below="@id/cinque_Hotel"
                    android:layout_marginStart="10dp"
                    android:text="@string/hdesc5" />
                <RatingBar
                    android:id="@+id/hrat5"
                    style="@style/ratingStyle"
                    android:layout_below="@+id/hdesc5" />

                <Button
                    android:id="@+id/trucar5"
                    style="@style/buttonStyle"
                    android:layout_below="@id/hrat5"
                    android:layout_toStartOf="@id/web5"
                    android:text="@string/telf" />

                <Button
                    android:id="@+id/web5"
                    style="@style/buttonStyle"
                    android:layout_below="@id/hrat5"
                    android:layout_alignParentEnd="true"
                    android:text="@string/web" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sise_h"
            style="@style/cardViewStyle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/sise_Hotel"
                    style="@style/titleStyle"
                    android:layout_marginStart="30dp"
                    android:text="@string/titol6_hotel" />

                <ImageView
                    android:id="@+id/img_h"
                    android:layout_width="140dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/hotelh" />
                <TextView
                    android:id="@+id/hdesc6"
                    style="@style/descriptionStyle"
                    android:layout_below="@id/sise_Hotel"
                    android:layout_marginStart="10dp"
                    android:text="@string/hdesc6" />
                <RatingBar
                    android:id="@+id/hrat6"
                    style="@style/ratingStyle"
                    android:layout_below="@+id/hdesc6" />

                <Button
                    android:id="@+id/trucar6"
                    style="@style/buttonStyle"
                    android:layout_below="@id/hrat6"
                    android:layout_toStartOf="@id/web6"
                    android:text="@string/telf" />

                <Button
                    android:id="@+id/web6"
                    style="@style/buttonStyle"
                    android:layout_below="@id/hrat6"
                    android:layout_alignParentEnd="true"
                    android:text="@string/web" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sete_h"
            style="@style/cardViewStyle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/sete_Hotel"
                    style="@style/titleStyle"
                    android:layout_marginEnd="50dp"
                    android:text="@string/titol7_hotel" />

                <ImageView
                    android:id="@+id/img_ciutat"
                    android:layout_width="140dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ciutat" />
                <TextView
                    android:id="@+id/hdesc7"
                    style="@style/descriptionStyle"
                    android:layout_below="@id/sete_Hotel"
                    android:layout_marginStart="10dp"
                    android:text="@string/hdesc7" />

                <RatingBar
                    android:id="@+id/hrat7"
                    style="@style/ratingStyle"
                    android:layout_below="@+id/hdesc7" />

                <Button
                    android:id="@+id/trucar7"
                    style="@style/buttonStyle"
                    android:layout_below="@id/hdesc7"
                    android:layout_toEndOf="@id/img_ciutat"
                    android:text="@string/telf" />

                <Button
                    android:id="@+id/web7"
                    style="@style/buttonStyle"
                    android:layout_below="@id/hrat7"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:text="@string/web" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>