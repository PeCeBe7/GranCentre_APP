<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <Button
            android:id="@+id/bt_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:background="@drawable/business" />

        <Button
            android:id="@+id/bt_restaurants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/restaurants" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:gravity="center">

        <Button
            android:id="@+id/bt_movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:background="@drawable/movies" />

        <Button
            android:id="@+id/bt_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/weather" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:gravity="center">

        <Button
            android:id="@+id/bt_hotels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:background="@drawable/hotels" />

        <Button
            android:id="@+id/bt_knowledge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/knowledge" />
    </LinearLayout>


</LinearLayout>